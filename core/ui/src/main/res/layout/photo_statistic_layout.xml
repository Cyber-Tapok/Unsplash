<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        app:drawableStartCompat="@drawable/ic_baseline_favorite_24"
        style="@style/StatisticTextView"
        tools:text="100" />

    <TextView
        android:id="@+id/downloads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        app:drawableStartCompat="@drawable/ic_baseline_download_24"
        style="@style/StatisticTextView"
        tools:text="100" />

    <TextView
        android:id="@+id/views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        app:drawableStartCompat="@drawable/ic_baseline_remove_red_eye_24"
        style="@style/StatisticTextView"
        tools:text="100" />
</LinearLayout>